<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@id/resultTextView">

            <CustomAttribute
                app:attributeName="textSize"
                app:customDimension="20sp" />
        </Constraint>

        <Constraint
            android:id="@id/edgeView"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/extraFunctionsLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toTopOf="@id/inputLayout"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintVertical_weight="0.2" />

        <Constraint
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="500dp" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint
            android:id="@id/resultTextView">

            <CustomAttribute
                app:attributeName="textSize"
                app:customDimension="28sp" />
        </Constraint>

        <Constraint
            android:id="@id/edgeView"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintBottom_toTopOf="@id/extraFunctionsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline" />

        <Constraint
            android:id="@+id/extraFunctionsLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/inputLayout"
            app:layout_constraintTop_toBottomOf="@id/edgeView"
            app:layout_constraintVertical_weight="0" />

        <Constraint
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="450dp" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@id/collapsed"
        app:duration="200">

        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@id/edgeView"
            app:touchAnchorSide="bottom"
            app:touchRegionId="@id/edgeView" />
    </Transition>

    <Transition
        app:constraintSetEnd="@+id/collapsed"
        app:constraintSetStart="@+id/expanded"
        app:duration="200">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/edgeView"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/edgeView" />
    </Transition>

</MotionScene>
